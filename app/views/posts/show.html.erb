
<%= render 'shared/title', title: @post.title %>
<p><%= @post.description %></p>
<p>
	<span class="quiet">posted by </span><%= @post.user.username %>
	<small>at <%= display_datetime(@post.created_at) %></small>
</p>
<hr/>

<% if logged_in? %>
	<%= render 'comments/form'%>
<% end %>

<h5>Comments:</h5>

<% @comments.each do |com| %>
	<%= render 'comments/comment', com: com %>
<% end %>