<% header = (link_to("All Posts", categories_path) + "&raquo; #{@category.name}".html_safe)%>
<%= render 'shared/title', title: header %>
  <div class='row'>
    <%= link_to 'New Post', new_post_path, class: 'btn btn-success btn-small' %>
  </div>
<br/>
<% @category.posts.each do |post| %>
		<%= render 'posts/post', post: post %>
<% end %>