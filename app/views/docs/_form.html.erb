<div class="well">
	<%= render 'shared/error', obj: @doc %>
	<%= form_for @doc do |f| %>
		<div class='control-group'>	
			<%= f.label :title, "Title" %>
			<%= f.text_field :title %>
		</div>
		<div class='control-group'>
			<%= f.label :body, "Document" %>
			<%= f.text_area :body, size: "20x6" %>
		</div>
		<%= f.submit(@doc.new_record? ? "Create Doc" : "Update Doc", class: "btn btn-primary") %>
	<% end %>
</div>