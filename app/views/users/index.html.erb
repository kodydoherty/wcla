<%= render 'shared/title', title: "Residents" %>


<% @users.each do |user| %>
	<div class='well'>
		<div class="inline">
			<%= link_to "#{user.first_name.titleize} #{user.last_name.titleize}", user_path(user), class: 'lead'%>
			<%= user.unit %>
			<%= link_to 'Edit', edit_user_path(user) %>
			<% if current_user.admin? %>
				<%= link_to 'Destroy',  user,  method: :delete, data: { confirm: 'Are you sure?' } %>
			<% end %>
		</div>
	</div>
<% end %>
